<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/shadow1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shadow6" />

        <LinearLayout
            android:id="@+id/laout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layoutBrowse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imgViewBrowse"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_browse_activated">

                </ImageView>

                <TextView
                    android:id="@+id/txtBrowse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Browse"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_20" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtSELL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="Sell"
                android:textColor="@color/signuptextfieldcolor"
                android:textSize="@dimen/text_size_20" />

            <LinearLayout
                android:id="@+id/layoutMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/imgViewME"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_my_store">

                </ImageView>

                <TextView
                    android:id="@+id/txtME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="My store"
                    android:textColor="@color/signuptextfieldcolor"
                    android:textSize="@dimen/text_size_20" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>


